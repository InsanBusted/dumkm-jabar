generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Umkm {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  ownerName   String
  category    String
  description String
  location    String
  contact     String
  imageUrl    String?
  status      Status   @default(PENDING)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Status {
  PENDING
  APPROVED
  REJECTED
}
